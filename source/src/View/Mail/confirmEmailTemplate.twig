{% extends "baseTemplate.twig" %}

{% block title %}Вход{% endblock %}

{% block content %}
    <div class="center-form-block">
        <div class="center-form-block__inner">
            <h1 class="text-center">Вход</h1>
            <form action="/login/" method="POST">
                {% if errors.authError %}
                    <div class="invalid-feedback">
                        {{ errors.authError }}
                    </div>
                {% endif %}
                <div class="form-group">
                    <label for="login">Логин*:</label>
                    <input type="text"
                           class="form-control {% if errors.login and data %} is-invalid {% elseif data %} is-valid {% endif %}"
                           id="login" name="login"
                           aria-describedby="loginHelp"
                           autofocus
                           placeholder="login"
                           required
                           minlength="2"
                           pattern="[a-z0-9]+"
                            {% if data.login  %} value="{{ data.login }}" {% endif %}
                    >
                    {% if errors.login %}
                        <small class="invalid-feedback">{{ errors.login }}</small>
                    {% endif %}
                </div>
                <div class="form-group">
                    <label for="passwordAuthHelp">Пароль*:</label>
                    <input type="password"
                           class="form-control {% if errors.password and data %} is-invalid {% elseif data %} is-valid {% endif %}"
                           id="password"
                           name="password"
                           aria-describedby="passwordHelp"
                           placeholder="password"
                           required
                           minlength="6"
                    >
                    {% if errors.password %}
                        <div class="invalid-feedback">
                            {{ errors.password }}
                        </div>
                    {% endif %}
                </div>
                <div class="col-md-12 text-center">
                    <button type="submit" class=" btn btn-block btn-primary">Войти</button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}