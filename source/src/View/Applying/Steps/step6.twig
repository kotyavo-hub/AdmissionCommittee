<div id="examInputsGroups">
    <div class="form-row exam_inputs_group">
        <div class="form-group col-md-4">
            <label>Выбор предмета:</label>
            <select class="form-control" name="examsCodes[]" required>
                {% for exam in data.exams%}
                    <option value="{{exam.id}}">{{exam.name}}</option>
                {% endfor %}
            </select>
            <small class="invalid-feedback"></small>
        </div>
        <div class="form-group col-md-4">
            <label>Кол-во баллов (не обязательно):</label>
            <input type="number" min="0" max="100" step="1" class="form-control" name="examValues[]">
            <small class="invalid-feedback"></small>
        </div>
        <div class="form-group col-md-4">
